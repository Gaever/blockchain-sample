{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json",
    "./seeds/**/*.ts",
    "./seeds/**/*.json"
  ],
  "references": [
    {
      "path": "../lib"
    }
  ]
}
